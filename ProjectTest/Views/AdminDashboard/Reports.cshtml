@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html ng-app="Ecommerce" ng-show="!isLoading">
<head>
    <script src="~/libs/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="~/libs/bootstrap.min.css">
    <script src="~/libs/angular.min.js"></script>
    <script src="~/libs/ui-bootstrap-tpls.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/libs/test/all.min.css">
    <script src="~/libs/chart.js"></script>
    <script src="~/libs/html2canvas.min.js"></script>
    <script src="~/libs/jspdf.umd.min.js"></script>

    <script src="~/MyScripts/Reports/ReportController.js"></script>
    <script src="~/MyServices/WebApi/WebApiService.js"></script>
    <script src="~/MyServices/Category/CategoryWebApiService.js"></script>
    <script src="~/MyServices/Product/ProductWebApiService.js"></script>
    <script src="~/MyServices/Modals/modalService.js"></script>
    <script src="~/MyServices/Authentication/AuthenticationService.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        /* Summary boxes styling */
        .summary-container {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        /* Summary boxes styling */
        .summary-box {
            flex: 1;
            border-radius: 12px;
            padding: 20px;
            color: white;
            background-color: #2c3e50;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .summary-box-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 40px;
            opacity: 0.3;
            color: white; /* This makes the icons white */
        }

        .summary-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
        }

        .summary-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #e74c3c, #f39c12);
        }

        .summary-box-title {
            font-size: 14px;
            margin-bottom: 10px;
            opacity: 0.8;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        .summary-box-value {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .summary-box-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            font-size: 40px;
            opacity: 0.2;
        }

        /* Card styling */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.05);
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
            background: white;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .card-body {
            padding: 1.5rem;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        /* Chart container */
        .chart-container {
            position: relative;
            height: 220px;
            min-height: 220px;
            flex-grow: 1;
        }

        /* Legend styling */
        .legend-item {
            display: inline-flex; /* Changed from flex to inline-flex */
            align-items: center;
            padding: 4px 8px;
            border-radius: 12px;
            background-color: #f8f9fa;
            cursor: pointer;
            transition: all 0.2s;
            border: 1px solid #e9ecef;
            box-sizing: border-box;
            font-size: 11px;
            margin: 2px; /* Added small margin between items */
            white-space: nowrap; /* Prevent text wrapping */
            max-width: 100%; /* Ensure it doesn't overflow container */
            /* Removed flex: 0 0 calc(50% - 8px) to allow natural width */
        }

        .chart-legend {
            display: flex;
            flex-wrap: wrap;
            gap: 6px; /* Slightly reduced gap for better flow */
            margin-top: 15px;
            justify-content: flex-start;
            max-height: 100px;
            overflow-y: auto;
            padding: 5px;
            align-items: center; /* Better vertical alignment */
        }


        .legend-item.active {
            background-color: rgba(231, 76, 60, 0.1);
            border-color: #e74c3c;
            color: #2c3e50;
        }

        .legend-item.inactive {
            opacity: 0.5;
            background-color: rgba(44, 62, 80, 0.05);
            color: #7f8c8d;
        }

        .legend-item:hover {
            background-color: rgba(44, 62, 80, 0.1);
        }

        .legend-color {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 6px;
            display: inline-block;
            flex-shrink: 0;
        }

        /* Scrollbar styling */
        .chart-legend::-webkit-scrollbar {
            width: 4px;
        }

        .chart-legend::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .chart-legend::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 2px;
        }

            .chart-legend::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .summary-container {
                flex-direction: column;
            }

            .summary-box {
                padding: 15px;
            }

            .summary-box-value {
                font-size: 24px;
            }

            .summary-box-icon {
                font-size: 30px;
            }

            .legend-item {
                flex: 0 0 100%;
                font-size: 0.65rem;
            }

            .chart-container {
                height: 200px;
            }
        }

        /* Dual card layout */
        .dual-chart-container {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .chart-wrapper {
            flex: 1;
            min-width: 0;
        }

        .report-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 0;
        }

            .report-table thead {
                background-color: #f8f9fa;
                border-bottom: 2px solid #e0e0e0;
            }

            .report-table th {
                padding: 12px 15px;
                text-align: left;
                font-weight: 600;
                color: #2c3e50;
                font-size: 14px;
            }

            .report-table td {
                padding: 12px 15px;
                vertical-align: middle;
                border-bottom: 1px solid #f0f0f0;
                font-size: 14px;
            }

            .report-table tr:last-child td {
                border-bottom: none;
            }

            .report-table tr:hover {
                background-color: rgba(44, 62, 80, 0.03);
            }

        .numeric-cell {
            text-align: right;
            font-weight: 500;
        }

        .revenue-cell {
            color: #e74c3c;
            font-weight: 600;
        }

        .product-cell {
            display: flex;
            align-items: center;
        }

        .product-img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 4px;
            margin-right: 10px;
        }

        .table-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .table-card-header {
            background-color: #2c3e50;
            color: white;
            padding: 15px 20px;
            font-weight: 600;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .table-responsive {
            overflow-x: auto;
        }

        .chart-container {
            position: relative;
            min-height: 300px;
        }

        .revenue-bar {
            background-color: #e74c3c;
            transition: all 0.3s ease;
        }

            .revenue-bar:hover {
                background-color: #c0392b;
            }

        .chart-container {
            position: relative;
            min-height: 300px;
        }

        /* Toggle switch styling */
        .chart-toggle {
            display: flex;
            background: rgba(255,255,255,0.1);
            border-radius: 20px;
            padding: 2px;
        }

        .toggle-btn {
            background: transparent;
            border: none;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .toggle-btn.active {
                background: #e74c3c;
                font-weight: 600;
            }

            .toggle-btn:focus {
                outline: none;
            }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-title {
            font-size: 18px;
            font-weight: 600;
            color: var(--primary-dark);
        }

        .download-btn {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .download-btn:hover {
                background-color: #c0392b;
                transform: translateY(-1px);
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            }

            .download-btn:active {
                transform: translateY(0);
            }

            .download-btn i {
                font-size: 14px;
            }

        /* If you want to align the button vertically centered with the title */
        .header-content {
            height: 100%;
        }

        .loader-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.95);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            flex-direction: column;
        }

        .loader-content {
            text-align: center;
            transform: translateY(-50px);
        }

        .loader-spinner {
            width: 80px;
            height: 80px;
            position: relative;
            margin: 0 auto 30px;
        }

        .loader-spinner-inner {
            position: absolute;
            width: 100%;
            height: 100%;
            border: 4px solid transparent;
            border-top-color: #e74c3c;
            border-radius: 50%;
            animation: spin 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
        }

            .loader-spinner-inner:nth-child(1) {
                animation-delay: -0.45s;
                width: 70%;
                height: 70%;
                top: 15%;
                left: 15%;
                border-top-color: #2c3e50;
            }

            .loader-spinner-inner:nth-child(2) {
                animation-delay: -0.3s;
                width: 50%;
                height: 50%;
                top: 25%;
                left: 25%;
                border-top-color: #e74c3c;
            }

            .loader-spinner-inner:nth-child(3) {
                animation-delay: -0.15s;
                width: 30%;
                height: 30%;
                top: 35%;
                left: 35%;
                border-top-color: #2c3e50;
            }

        .loader-text {
            color: #2c3e50;
            font-size: 18px;
            font-weight: 500;
            margin-top: 20px;
            letter-spacing: 0.5px;
        }

        .loader-subtext {
            color: #7f8c8d;
            font-size: 14px;
            margin-top: 10px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Optional: Add pulse animation for text */
        @@keyframes pulse {
            0% {
                opacity: 0.6;
            }

            50% {
                opacity: 1;
            }

            100% {
                opacity: 0.6;
            }
        }
        /* Hide tooltip for inactive items */
        .legend-item.inactive[title] {
            pointer-events: none; /* Prevents hover */
        }
    </style>
</head>
<body ng-controller="ReportController">
    <div ng-show="isLoading" class="loader-container">
        <div class="loader-content">
            <div class="loader-spinner">
                <div class="loader-spinner-inner"></div>
                <div class="loader-spinner-inner"></div>
                <div class="loader-spinner-inner"></div>
            </div>
            <div class="loader-text">Loading Reports</div>
            <div class="loader-subtext">Please wait while we prepare your content</div>
        </div>
    </div>
    <!-- Summary Boxes -->
    <div class="summary-container">
        <div class="summary-box">
            <div class="summary-box-title">TOTAL SALES</div>
            <div class="summary-box-value">
                {{SummaryTotalSales | currency}}
            </div>
            <div class="summary-box-icon"><i class="fa fa-money-bill"></i></div>

        </div>
        <div class="summary-box">
            <div class="summary-box-title">TOTAL ORDERS</div>
            <div class="summary-box-value">{{SummaryTotalOrders}}</div>
            <div class="summary-box-icon">📦</div>
        </div>
        <div class="summary-box">
            <div class="summary-box-title">PRODUCTS SOLD</div>
            <div class="summary-box-value">{{SummaryProductsSold}} </div>
            <div class="summary-box-icon">🛒</div>
        </div>
    </div>

    <div class="dual-chart-container">
        <!-- Sales by Category -->
        <div class="chart-wrapper">
            <div class="card">
                <div class="card-header">
                    <span style="font-size:13px;">Sales by Category ($)</span>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="salesChart"></canvas>
                    </div>
                    <div class="chart-legend">
                        <div ng-repeat="category in totalSalesByCategories"
                             class="legend-item"
                             ng-class="{'active': category.SalesVisible, 'inactive': !category.SalesVisible}"
                             ng-click="toggleSalesCategory($index)"
                             ng-attr-title="{{category.SalesVisible ? (category.Name + ' - $' + (category.TotalSales | number:0) + ' (' + (category.TotalSales / totalSales * 100 | number:1) + '%)') : undefined}}">
                            <span class="legend-color" ng-style="{'background-color': category.Color}"></span>
                            <span class="legend-text">
                                {{category.Name}}
                                <span ng-if="category.SalesVisible"> ({{(category.TotalSales / totalSales * 100 | number:1)}}%) </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quantity by Category -->
        <div class="chart-wrapper">
            <div class="card">
                <div class="card-header">
                    <span style="font-size:13px;">Quantity by Category (#)</span>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="quantityChart"></canvas>
                    </div>
                    <div class="chart-legend">
                        <div ng-repeat="category in totalSalesByCategories"
                             class="legend-item"
                             ng-class="{'active': category.QuantityVisible, 'inactive': !category.QuantityVisible}"
                             ng-click="toggleQuantityCategory($index)"
                             ng-attr-title="{{category.QuantityVisible ? (category.Name + ' - ' + (category.TotalQuantity | number:0) + ' units (' + (category.TotalQuantity / totalQuantity * 100 | number:1) + '%)') : undefined}}">
                            <span class="legend-color" ng-style="{'background-color': category.Color}"></span>
                            <span class="legend-text">
                                {{category.Name}}
                                <span ng-if="category.QuantityVisible"> ({{(category.TotalQuantity / totalQuantity * 100 | number:1)}}%) </span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Products Row -->
    <div class="row">
        <div class="col-md-6">
            <div class="card table-card">
                <div class="table-card-header">
                    <div class="header-content">
                        <span class="header-title">Top Selling Products</span>
                        <button class="download-btn" ng-click="downloadTopSellingPDF()">
                            <i class="fas fa-file-pdf"></i> Download PDF
                        </button>
                    </div>
                </div>
                <div class="card-body" id="ProductTopSelling">
                    <div class="table-responsive">
                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th class="numeric-cell">Sold</th>
                                    <th class="numeric-cell">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="product in TopSellingProducts">
                                    <td>
                                        <div class="product-cell">
                                            <img ng-src="{{product.ImagePath[0].ImagePath}}" class="product-img">
                                            <span>{{product.ProductName}}</span>
                                        </div>
                                    </td>
                                    <td>{{product.CategoryName}}</td>
                                    <td class="numeric-cell">{{product.TotalQuantitySold}}</td>
                                    <td class="numeric-cell revenue-cell">{{product.TotalRevenue | currency}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card table-card">
                <div class="table-card-header">
                    <div class="header-content">
                        <span class="header-title">Lowest Selling Products</span>
                        <button class="download-btn" ng-click="downloadLowestSellingPDF()">
                            <i class="fas fa-file-pdf"></i> Download PDF
                        </button>
                    </div>

                </div>
                <div class="card-body" id="ProductLowestSelling">
                    <div class="table-responsive">
                        <table class="report-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th class="numeric-cell">Sold</th>
                                    <th class="numeric-cell">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="product in LowSellingProducts">
                                    <td>
                                        <div class="product-cell">
                                            <img ng-src="{{product.ImagePath[0].ImagePath}}" class="product-img">
                                            <span>{{product.ProductName}}</span>
                                        </div>
                                    </td>
                                    <td>{{product.CategoryName}}</td>
                                    <td class="numeric-cell">{{product.TotalQuantitySold}}</td>
                                    <td class="numeric-cell revenue-cell">{{product.TotalRevenue | currency}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" style="background-color: #2c3e50; color: white; display: flex; justify-content: space-between; align-items: center;">
                    <span style="font-size:14px">Monthly Revenue (Last 12 Months)</span>
                    <div class="chart-toggle">
                        <button ng-click="chartType = 'bar'" ng-class="{'active': chartType === 'bar'}" class="toggle-btn">Bar</button>
                        <button ng-click="chartType = 'line'" ng-class="{'active': chartType === 'line'}" class="toggle-btn">Line</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="height: 300px;">
                        <canvas id="monthlyRevenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>